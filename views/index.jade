extends layout

block content
    noscript
        p Hello, and welcome to sleepyti.me. Sleepyti.me is a bedtime calculator that counts backwards in sleep cycles and tells you when to go to sleep so that you can wake up refreshed! This site is written in Javascript, which must be enabled in order to use the page. Thanks for visiting, and sorry for the inconvenience!
    
    .container
        #title(style='display:none;')
            h1 sleepyti.me 
                span bedtime calculator
        #inner-wrap
            #wake-up-prompt(style='display:none;').prompt
                .text I have to wake up at
                #dropdown-hours
                    select#hour
                        option (hour)

                        - for (var h = 1; h <= 12; h++) {
                            option #{h}
                        - }

                    select#minute
                        option (minute)
                        - for (var m = 0; m <= 55; m += 5) {
                            - if (m < 10)
                                option 0#{m}
                            - else
                                option #{m}
                        - }

                    select#ampm
                        option#AM AM
                        option#PM PM

                    button#wake-up-calculate.btn Calculate

            #wake-up-when(style='display:none;').prompt
                .text Find out when to wake up if you go to bed now
                button(class='btn btn-primary btn-large', id='sleepnow') Find out Now!
            #result-text(style='display: none;')

        include footer